{
  "name": "px-rem-converter",
  "displayName": "PX REM Converter",
  "description": "Converts pixels to rem. As simple as it gets.",
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.40.0"
  },
  "repository": {
    "url": "https://github.com/NiklasPor/px-rem-converter",
    "type": "git"
  },
  "publisher": "niklaspor",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.convert"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "PX REM Converter",
      "properties": {
        "pxRemConverter.pxPerRem": {
          "type": "number",
          "default": 16,
          "description": "This number indicates how many pixel fit in one rem."
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "extension.convert",
          "when": "editorIsOpen && resourceScheme == file"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.convert",
        "title": "PX to REM",
        "category": "Convert"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.40.0",
    "glob": "^7.1.5",
    "mocha": "^10.2.0",
    "typescript": "^3.6.4",
    "tslint": "^5.20.0",
    "vscode-test": "^1.2.2"
  }
}
